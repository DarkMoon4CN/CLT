<script type="text/javascript">
    function checkForm()
    {
        if ($("#mention_charges_name").val() == "")
        {
            alert("提现费用名称不能为空!");
            $("#mention_charges_name").focus();
            return false;
        }
    }

    function afterAdd(data)
    {
        alert(data.info);

    }
    function clearNoNum(obj) {
        obj.value = obj.value.replace(/[^\d.]/g, "");  //清除“数字”和“.”以外的字符
        obj.value = obj.value.replace(/^\./g, "");  //验证第一个字符是数字而不是.
        obj.value = obj.value.replace(/\.{2,}/g, "."); //只保留第一个. 清除多余的.
        obj.value = obj.value.replace(".", "$#$").replace(/\./g, "").replace("$#$", ".");
    }
</script>

<h2 class="z_location"><a href="javascript:void(0)">当前位置：</a><a href="/Admin/MentionCharges/Index" class="z_mg5">提现费用管理</a>><a href="javascript:void(0)"> 新增提现费用</a></h2>
