    <h3 class="z_h3">新增提现费用</h3>
    <div class="z_02 z_main">
        @using (Html.BeginForm("AddPost", "MentionCharges", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
        {
            @Html.AntiForgeryToken()
