@using ChuanglitouP2P.Common
@{
    ViewBag.Title = "找回密码";
    Layout = "~/Views/Shared/Index_Layout.cshtml";
}
@Url.File("Content/reg_common.css").ToHtml()
@Url.File("Scripts/Validform_v5.3.2_min.js").ToHtml()
