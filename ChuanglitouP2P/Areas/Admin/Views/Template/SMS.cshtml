    <div class="tz_box cz_box">
        @using (Html.BeginForm("SMSPost", "Template", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
            {
            <div class="z_cont2">
                @Html.AntiForgeryToken()
                
