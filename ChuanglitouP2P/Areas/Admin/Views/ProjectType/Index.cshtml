@using ChuanglitouP2P.Common;
@using PagedList.Mvc;
@using ChuangLitouP2P.Models;
@using PagedList
@model PagedList.IPagedList<hx_Project_type>
@{
    ViewBag.Title = "项目类型";
    Layout = "~/Areas/Admin/Views/Shared/_BodyView.cshtml";
}

<link href="~/Areas/Admin/style/chonzhi.css" rel="stylesheet" />
<link href="~/Areas/Admin/style/jcDate.css" rel="stylesheet" />
<link rel="stylesheet" href="/Areas/Admin/styleCont/style.css" />
<link href="~/Areas/Admin/style/pagination.css" rel="stylesheet" />
<link href="~/Areas/Admin/style/liebiao.css" rel="stylesheet" />
<style type="text/css">
    tfoot tr {
        height: 35px;
        line-height: 35px;
        left: 30px;
    }
</style>
<script src="~/Areas/Admin/js/jquery-1.7.1.js"></script>
<script src="~/Areas/Admin/js/jQuery-jcDate.js"></script>
<script src="~/Areas/Admin/js/common.js"></script>
<script src="~/Scripts/layer/layer.min.js"></script>
<script src="~/Areas/Admin/js/DateJs,js.js"></script>


<h2 class="z_location"><a href="javascript:void(0)">当前位置：</a><a href="javascript:void(0)" class="z_mg5">项目类型管理</a></h2>
<div class="z_body">
        <p class="tP3">
            <a href="/Admin/ProjectType/Add" class="add_btn">新增</a>
            快速搜索
        </p>
        @using (Html.BeginForm("Index", "ProjectType", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
        {
            @Html.AntiForgeryToken()
            <p class="tP4 tx_tp4" style="height:50px;">
                <label for="username">标题：</label><input type="text" class="txt1" id="project_type_name" name="project_type_name" value="@(ViewBag.project_type_name)" style="height:20px; width:280px;" /> &nbsp; 
                
                <input type="submit" class="btn2" value="查&nbsp;&nbsp;&nbsp;询" />

            </p>
        }
        <span class="icon-sprite icon-list"></span>
        <h3 class="listtitle">
            项目类型管理
        </h3>

        <table cellspacing="0" cellpadding="0" class="listtable">
            <tbody>
                <tr class="tz_tr">
                    <th scope="col">编号 </th>
                    <th scope="col">类型名称</th>
                  
                    <th scope="col">操作</th>
                </tr>
                @if (Model != null)
                {
                    foreach (hx_Project_type item in Model)
                    {

                        <tr>
                            <td>@(item.project_type_id)</td>
                            <td>@(item.project_type_name)</td>
            
                            <td>
                                <a class="opt" title="编辑" href="/admin/ProjectType/Edit?id=@item.project_type_id&page=@ViewBag.page">编辑</a> &nbsp;  &nbsp;
                                <a class="opt" title="删除" href="/admin/ProjectType/DelById?id=@item.project_type_id&page=@ViewBag.page&project_type_name=@ViewBag.project_type_name" >  删除</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
       
        <div class="pagination ue-clear">
            <div class="pagination-container">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, project_type_name = @ViewBag.project_type_name }))
            </div>
        </div>
</div>

