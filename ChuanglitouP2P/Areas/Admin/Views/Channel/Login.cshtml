        }

        .ring {
            FONT-SIZE: 12px;
            COLOR: #000066;
            FONT-FAMILY: webdings;
        }
    </STYLE>
    <script src="~/Areas/Admin/js/jquery-1.7.1.js"></script>
    <script src="~/Scripts/layer/layer.min.js"></script>
    <script src="~/Areas/Admin/js/Channel.js"></script>
    <SCRIPT language=JavaScript>
        $(function () {
            Channel.loginInit();
        });
        function changeImg() {
            document.getElementById("image1").src = "/admin/login/ImageValidate?a=" + Math.random();
        }
    </SCRIPT>
</head>
<body>
    @using (Html.BeginForm("DoLogin", "Channel", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <TABLE height="100%" cellSpacing=0 cellPadding=0 width="100%" border=0>
                <TBODY>
                    <TR>
                        <TD align=middle>
                            <TABLE cellSpacing=0 cellPadding=0 width="100%" border=0>
                                <TBODY>
                                    <TR>
                                        <TD height=1></TD>
                                    </TR>
                                    <TR>
                                        <TD align=middle>
                                            <IMG height=247
                                                 src="/Areas/Admin/images/login_image3.gif" width=525 border=0>
                                        </TD>
                                    </TR>
                                    <TR>
                                        <TD>
                                            <SPAN style="FONT-SIZE: 1pt">&nbsp;</SPAN>
                                        </TD>
                                    </TR>
                                    <TR>
                                        <TD align=middle>

                                            <TABLE cellSpacing=0 cellPadding=0 width=889 align=center
                                                   border=0>
                                                <TBODY>
                                                    <TR>
                                                        <TD width=387 rowSpan=3>&nbsp;</TD>
                                                        <TD vAlign=center align=middle width=71 height=22>管理账号
                                                        <TD height=30 style="width: 158px">
                                                            <INPUT style="BORDER-RIGHT: rgb(182,182,182) 1px solid; BORDER-TOP: rgb(182,182,182) 1px solid; FONT-WEIGHT: normal; FONT-SIZE: 12px; BORDER-LEFT: rgb(182,182,182) 1px solid; BORDER-BOTTOM: rgb(182,182,182) 1px solid;"
