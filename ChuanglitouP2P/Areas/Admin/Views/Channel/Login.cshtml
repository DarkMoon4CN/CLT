        }

        A.lb:hover {
            COLOR: red;
        }

        .pw {
            COLOR: white;
        }

        A.lw:link {
            COLOR: white;
        }

        A.lw:visited {
            COLOR: white;
        }

        A.ch:link {
            COLOR: #697111;
        }

        A.ch:visited {
            COLOR: #697111;
        }

        .sinput {
            BORDER-RIGHT: 1px ridge;
            BORDER-TOP: #ffffff 1px ridge;
            BORDER-LEFT: #ffffff 1px ridge;
            BORDER-BOTTOM: 1px ridge;
