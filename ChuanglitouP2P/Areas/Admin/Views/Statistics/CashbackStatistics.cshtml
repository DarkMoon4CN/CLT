@model PagedList.IPagedList<Statistics_ActiveSepteberCashback>
@{
    ViewBag.Title = "返现统计";
    Layout = "~/Areas/Admin/Views/Shared/_BodyView.cshtml";
    int regcount = 0;
    int realCount = 0;
    int firstCount = 0;
}


