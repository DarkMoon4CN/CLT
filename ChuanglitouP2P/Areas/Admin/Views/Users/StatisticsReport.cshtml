<script>
    $(function () {
        $('.cnt-wp table tr').css('background', '#f7f7f7');
        $('.ffjl').click(function () {
            $('#xubox_shade1').css('display', 'block');
            $('.xubox_layer').css('display', 'block');
            var strIds = "";
            $("input[name='cbx_item']").each(function () {
                if ($(this).attr("checked")) {
                    if (strIds.length > 0) {
                        strIds = strIds + ",";
                    }
                    strIds = strIds + $(this).val();
                }
            });

            $("#registerid").val(strIds);



        })

    })
    function closeTck() {
        $('#xubox_shade1').css('display', 'none');
        $('.xubox_layer').css('display', 'none');

    }
    function ck() {


        var vl = $("#txtTitle").val().trim();
        if (vl == "") {
            alert("标题不能为空");
            return false
        }
        vl = $("#bonus_start_time").val().trim();
        if (vl == "") {
            alert("开始时间不能为空");
            return false
        }

        vl = $("#bonus_end_time").val().trim();
        if (vl == "") {
            alert("结束时间不能为空");
            return false
        }

        vl = $("#bonus_k").val().trim();
        if (vl == "") {
            alert("数量不能为空");
            return false
        }
        if ($("tr[atr=\"rates\"]").css("display") != "none") {
            vl = $("#ddlRateList").val();
            if (vl == "0") {
                alert("请选择加息券");
                return false
            }
        }

        if ($("#registerid").val() == "") {
            alert("请选择用户");
            return false
        }

        return true;

    }
    function choose(i) {
        if (i == 0) {
            $("tr[atr=\"rates\"]").hide();
            $("tr[atr=\"bonus\"]").show();
        } if (i == 1) {
            $("tr[atr=\"rates\"]").show();
            $("tr[atr=\"bonus\"]").hide();
        }
    }

</script>
