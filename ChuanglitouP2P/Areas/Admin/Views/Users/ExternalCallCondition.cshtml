        if (vl == "") {
            alert("标题不能为空");
            return false
        }
        vl = $("#bonus_start_time").val().trim();
        if (vl == "") {
            alert("开始时间不能为空");
            return false
        }

        vl = $("#bonus_end_time").val().trim();
        if (vl == "") {
            alert("结束时间不能为空");
