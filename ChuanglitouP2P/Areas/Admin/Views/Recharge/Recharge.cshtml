    <div class="z_02 z_main">
        @using (Html.BeginForm("Recharge_Money", "Recharge", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
        {
            @Html.AntiForgeryToken()
            <div class="z_cont2">

            <ul class="zTab_ul">
                <li style="margin-bottom:24px;" class="z_li_01">
                    <label for="money">充值金额：</label>
                    <input type="text" id="money" name="money" class=""  datatype="money" nullmsg="充值金额不能空！"   errormsg="请输入正确的充值金额！" />
                    <label class="Validform_checktip Validform_wrong" style=""></label>
                </li>
                <li style="margin-bottom:24px;" class="z_li_01">
                    <div class="z_btn">
                        <input type="submit" class="z_btn_01" value="充值">
