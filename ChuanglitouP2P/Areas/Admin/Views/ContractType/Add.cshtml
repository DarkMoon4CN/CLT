    .tdleft {
        width: 20%;
        text-align: right;
    }

    .tdright {
        width: 80%;
        text-align: left;
    }

    tr {
        background: rgb(255, 255, 255);
    }
</style>

<h2 class="z_location"><a href="javascript:void(0)">当前位置：</a><a href="/Admin/ProjectType/Index" class="z_mg5">合同类型管理</a>><a href="javascript:void(0)"> 增加</a></h2>
<div class="z_body">
    <span class="icon-sprite icon-list"></span>
    <h3 class="listtitle">
        合同类型管理
    </h3>
    <div class="tz_box cz_box">
        @using (Html.BeginForm("AddPost", "ContractType", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1" }))
            {
            <div class="z_cont2">
                <br />
                @Html.AntiForgeryToken()

                <table width="100%" style="table-layout:fixed;padding-left:10px;margin-top:10px;">
                    <tr>
                        <td class="tdleft"><label for="contract_type_id">合同类型名称：</label></td>
                        <td class="tdright">
                            <input type="text" id="contract_type_name" name="contract_type_name" class="" style="width:240px; height:24px;" datatype="*2-30" nullmsg="合同类型名称不能为空！" errormsg="合同类型名称在2~30位之间！" />
                            <span class="Validform_checktip"></span>
                        </td>
                    </tr>


                </table>
            </div>
            <br />

            <div class="submin_box">
                <input type="submit" class="z_btn_01" value="确 定" style="width:90px; height:25px;" />

                <a href="/admin/ContractType/Index" class="z_btn_01" style="width:90px; height:25px; line-height:25px">返 回</a>
            </div>

        }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $(".registerform").Validform({
            tiptype: 4
        });
        $.extend($.Datatype, {
            "z2-4": /^[\u4E00-\u9FA5\uf900-\ufa2d]{2,4}$/,
            "d": /^(\d{4})\-(\d{2})\-(\d{2})$/,
            "day1": /^[1-2]\d{0,1}$|^28$/,
            "mobile": /^0?(13[0-9]|15[012356789]|18[0123456789]|17[0123456789]|14[57])[0-9]{8}$/,
            "regex": /^[^\u4E00-\u9FA5]{3,20}$/,
            "regex1": /^[0-9A-Za-z]{6,25}$/,
            "float": /([0-9]+.[0-9]{2})[0-9]*/,
            "money": /^\d{1,12}(?:\.\d{1,2})?$/,
            "n": /^\d+$/,
            "daytime": /^(\d{4})\-(\d{2})\-(\d{2}) (\d{2}):(\d{2}):(\d{2})$/,
            "int": /[1-9]\d*/

        });


    });



</script>

