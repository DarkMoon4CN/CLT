    function checkForm() {
        if ($("#ActName").val() == "") {
            alert("活动名称不能为空!");
            $("#ActName").focus();
            return false;
        }
        if ($("#ActStarttime").val() == "") {

            alert("活动开始时间不能为空!");
            $("#ActStarttime").focus();
            return false;
        }
        if ($("#ActEndtime").val() == "") {

            alert("活动结束时间不能为空!");
            $("#ActEndtime").focus();
            return false;
        }


        var rt2 = $("#z_div02").css("display");
        var rt3 = $("#z_div03").css("display");

        if (rt2 == "block")//抵扣券
        {

            if ($("#cash1").val() == "") {
                alert("赠送抵扣券总金额不能为空!");
                $("#cash1").focus();
                return false;
            }
            var isSplit = $("input[id='ISsplit']:checked").val();
            if (isSplit == 1) {//拆分
                if ($("#cashAmtsplit1").val() == "") {
                    alert("拆分金额不能为空!");
                    $("#cashAmtsplit1").focus();
                    return false;
                }
                if ($("#startAmtsplit1").val() == "") {
                    alert("最低投资金额不能为空!");
                    $("#startAmtsplit1").focus();
                    return false;
                }
                if ($("#endAmtsplit1").val() == "") {
                    alert("最高投资金额不能为空!");
                    $("#endAmtsplit1").focus();
                    return false;
                }
                if ($("#endTimesplit1").val() == "" && $("#validity").val() == "") {
                    alert("过期时间和有效天数必须填写一项!");
                    $("#endTimesplit1").focus();
                    return false;
                }
            }
            else {//不拆分
                if ($("#cashAmtsplit2").val() == "") {
                    alert("现金劵金额不能为空!");
                    $("#cashAmtsplit2").focus();
                    return false;
                }
                if ($("#startAmtsplit2").val() == "") {
                    alert("最低投资金额不能为空!");
                    $("#startAmtsplit2").focus();
                    return false;
                }
                if ($("#endAmtsplit2").val() == "") {
                    alert("最高投资金额不能为空!");
                    $("#endAmtsplit2").focus();
                    return false;
                }
                if ($("#endTimesplit2").val() == "" && $("#validity1").val() == "") {
                    alert("过期时间和有效天数必须填写一项!");
                    $("#endTimesplit2").focus();
                    return false;
                }
            }            
            
        }
        else if (rt3 == "block")//加息
        {
            if ($("#cash2").val() == "") {

                alert("加息券百分比不能为空!");
                $("#cash2").focus();
                return false;
            }
            if ($("#cashAmtsplit3").val() == "") {

                alert("使用条件不能为空!");
                $("#cashAmtsplit3").focus();
                return false;
            }

            if ($("#startAmtsplit3").val() == "") {

                alert("投资人金额不能为空!");
                $("#startAmtsplit3").focus();
                return false;
            }
            if ($("#endAmtsplit3").val() == "") {

                alert("投资人金额不能为空!");
                $("#endAmtsplit3").focus();
                return false;
            }

            if ($("#endTimesplit3").val() == "" && $("#validity2").val() == "") {

                alert("过期时间和有效天数必须填写一项!");
                $("#endTimesplit3").focus();
                return false;
            }

        }




    }


