                return false;
            }
            if ($("#startAmtsplit3").val() == "") {
                alert("投资人金额不能为空!");
                $("#startAmtsplit3").focus();
                return false;
            }
            if ($("#endAmtsplit3").val() == "") {
                alert("投资人金额不能为空!");
