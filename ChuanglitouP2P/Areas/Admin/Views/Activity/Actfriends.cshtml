            $("#ActEndtime").focus();
            return false;
        }

        var rt1 = $("#z_div01").css("display");
        var rt2 = $("#z_div02").css("display");
        var rt3 = $("#z_div03").css("display");

        if (rt1 == "block")//现金
        {
            var value = $("input[id='require1']").is(':checked');
            if (value == true) {

                if ($("#startAmt").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#startAmt").focus();
                    return false;
                }
                if ($("#endAmt").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#endAmt").focus();
                    return false;
                }
                if ($("#percent").val() == "") {
                    alert("活动开始时间不能为空!");
                    $("#percent").focus();
                    return false;
                }

            }
            if ($("#TopAmt").val() == "") {
                alert("总佣金不能为空!");
                $("#TopAmt").focus();
                return false;
            }
            if ($("#TopAmt1").val() == "") {
                alert("单笔佣金不能为空!");
                $("#TopAmt1").focus();
                return false;
            }
        }
        else if (rt2 == "block")//抵扣券
        {

            if ($("#cash2").val() == "") {
                alert("赠送抵扣券不能为空!");
                $("#cash2").focus();
                return false;
            }
            var isSplit = $("input[id='ISsplit']:checked").val();
            if (isSplit == 1) {

                if ($("#cashAmtsplit1").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#cashAmtsplit1").focus();
                    return false;
                }
                if ($("#startAmtsplit1").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#startAmtsplit1").focus();
                    return false;
                }
                if ($("#endAmtsplit1").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#endAmtsplit1").focus();
                    return false;
                }
                if ($("#endTimesplit1").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#endTimesplit1").focus();
                    return false;
                }
            } else {
                if ($("#cashAmtsplit2").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#cashAmtsplit2").focus();
                    return false;
                }
                if ($("#startAmtsplit2").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#startAmtsplit2").focus();
                    return false;
                }
                if ($("#endAmtsplit2").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#endAmtsplit2").focus();
                    return false;
                }
                if ($("#endTimesplit2").val() == "") {
                    alert("投资人金额不能为空!");
                    $("#endTimesplit2").focus();
                    return false;
                }
            }
        }
        else if (rt3 == "block") {
            if ($("#cash3").val() == "") {
                alert("赠送加息券不能为空!");
                $("#cash3").focus();
                return false;
            }
