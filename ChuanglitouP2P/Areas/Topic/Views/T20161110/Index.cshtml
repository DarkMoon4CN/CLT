<script src="~/Scripts/qrcode/jquery.qrcode.min.js"></script>
<script>
    $(function () {
        $("#weixin").on("click", function () {
            if ($(this).attr("tag").indexOf("login") != -1) {
                window.location.href = $(this).attr("tag");
            }
            else
            {
                $("#weixin_layer").fadeIn(200);
                $('#weixin_pop').fadeIn(200);
                $('#qrcode').qrcode({ width: 200, height: 200, text: $("#hidQrCode").val() });
            }
        });
      
        $('.weixin_layer').click(function () {
            $("#weixin_layer").hide();
            $('#weixin_pop').hide();
        });
    });
 </script>
