                            <img src="~/Areas/Topic/Sources/20170106/images/centent_3_main_top_right_img.png">
                            <p><b>活动期间：</b>邀请的好友（被邀请人）单笔投资<br />额≥50万即赠送被邀请人2000元现金奖励；</p>
                        </div>
                    </div>
                    <div class="centent_3_main_bottom">
                        <ul class="centent_3_main_bottom_ul_left">
                            <li class="ul_left_tou">邀请奖励排行榜</li>
                            <li style="margin-top:-22px;"><a></a><span style="font-weight:bold">邀请人</span><span style="font-weight:bold">累计获得返现奖励</span></li>
                            @{

                                System.Data.DataTable JinE = ViewBag.JinE as System.Data.DataTable;
                                string mobile = "";
                                double amt = 0;
                                if (JinE != null)
                                {
                                    if (JinE.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < JinE.Rows.Count; i++)
                                        {
                                            mobile = JinE.Rows[i]["mobile"].ToString();
                                            if (mobile.Length == 11)
                                            {
                                                mobile = mobile.Substring(0, 3) + "****" + mobile.Substring(7, 4);
                                            }
                                            amt = Convert.ToDouble(JinE.Rows[i]["amt"].ToString());

                                            if (i == 0)
                                            {
                                                <li style="background-color:#692ce4;"><a class="li_yi"></a><span style="margin-right:10px;">@mobile </span><span style="text-align: left;width:125px;margin-left:25px">￥ @amt</span></li>
                                            }
                                            else if (i == 1)
                                            {
                                                <li><a class="li_er"></a><span style="margin-right:10px;">@mobile </span><span style="text-align: left;width:125px;margin-left:25px">￥ @amt</span></li>
                                            }
                                            else if (i == 2)
                                            {
                                                <li style="background-color:#692ce4;"><a class="li_san"></a><span style="margin-right:10px;">@mobile </span><span style="text-align: left;width:125px;margin-left:25px">￥ @amt</span></li>
                                            }
                                            else if (i == 3)
                                            {
                                                <li><a>4</a><span style="margin-right:10px;">@mobile </span><span style="text-align: left;width:125px;margin-left:25px">￥ @amt</span></li>

                                            }
                                            else if (i == 4)
                                            {
                                                <li style="background-color:#692ce4;"><a>5</a><span style="margin-right:10px;">@mobile </span><span style="text-align: left;width:125px;margin-left:25px">￥ @amt</span></li>
                                            }
                                            else
                                            {

                                            }
                                        }
                                    }
                                }
                                else
                                {

                                    <li style="background-color:#692ce4;"><a></a><span style="margin-right:20px;">暂无数据！</span><span style="text-align: left;"></span></li>
                                }
                            }

                        </ul>
                        <ul class="centent_3_main_bottom_ul_right">
                            <li class="ul_right_tou">邀请人气排行榜</li>
                            <li style="margin-top:-22px;"><a></a><span style="font-weight:bold">邀请人</span><span style="font-weight:bold">累计邀请人数</span></li>

                            @{

                                System.Data.DataTable dtcode = ViewBag.RenShu as System.Data.DataTable;
                                string mobile2 = "";
                                int count = 0;
                                if (dtcode != null)
                                {
                                    if (dtcode.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < dtcode.Rows.Count; i++)
                                        {
                                            mobile = dtcode.Rows[i]["mobile"].ToString();
                                            if (mobile.Length == 11)
                                            {
                                                mobile2 = mobile.Substring(0, 3) + "****" + mobile.Substring(7, 4);
                                            }
                                            count = int.Parse(dtcode.Rows[i]["invcode"].ToString());

                                            if (i == 0)
                                            {
                                                <li style="background-color:#692ce4;"><a class="li_yi"></a><span>@mobile2 </span><span style="text-align:right;width:100px;margin-right:45px;">@count 人</span></li>
                                            }
                                            else if (i == 1)
                                            {
                                                <li><a class="li_er"></a><span>@mobile2 </span><span style="text-align:right;width:100px;margin-right:45px;">@count 人</span></li>
                                            }
                                            else if (i == 2)
                                            {
                                                <li style="background-color:#692ce4;"><a class="li_san"></a><span>@mobile2 </span><span style="text-align:right;width:100px;margin-right:45px;">@count 人</span></li>
                                            }
                                            else if (i == 3)
                                            {
                                                <li><a>4</a><span>@mobile2 </span><span style="text-align:right;width:100px;margin-right:45px;">@count 人</span></li>

                                            }
                                            if (i == 4)
                                            {
                                                <li style="background-color:#692ce4;"><a>5</a><span>@mobile2 </span><span style="text-align:right;width:100px;margin-right:45px;">@count 人</span></li>
                                            }
                                            else
                                            {

                                            }
                                        }
                                    }
                                }
                                else
                                {

                                    <li style="background-color:#692ce4;"><a></a><span style="text-align:center">暂无数据！</span><span style="text-align:right;width:100px;margin-right:45px;"></span></li>
                                }
                            }





                        </ul>
