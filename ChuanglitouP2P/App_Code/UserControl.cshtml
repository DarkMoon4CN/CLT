@helper HX_SelectActUser(int acttype = 1, int Disp = 0)
{
if (acttype == 1)
{   /*用户等级*/
    if (Disp == 0)
    {
            <label for="useridentity">等级：</label>
    }

        <select style="height: 24px;line-height:24px" name="useridentity" id="useridentity">
            <option value="-1">请选择</option>
            <option value="0">普通会员</option>
            <option value="1">vip会员</option>
            <option value="2">黄金</option>
            <option value="3">虚假会员</option>
            <option value="4">渠道合作</option>
            <option value="5">白金</option>
            <option value="6">钻石</option>
            <option value="7">钻石1</option>
            <option value="8">钻石2</option>
        </select>
}
else if (acttype == 2)
{   /*来源*/
        <label for="Channelsource">来源：</label>
        <select style="height: 24px;line-height:24px" name="Channelsource" id="Channelsource">
            <option value="-1">请选择</option>
            <option value="0">pc注册</option>
            <option value="1">pc端好友邀请</option>
            <option value="2">微信注册</option>
            <option value="3">微信端好友邀请</option>
            <option value="4">IOS客户端</option>
            <option value="5">安卓客户端</option>
            @*<option value="2">某渠道</option>*@
        </select>
}
else if (acttype == 3)
{
        <label for="rewardType">奖励类型：</label>
        <select style="height: 24px;line-height:24px" name="rewardType" id="rewardType">
            <option value="-1">请选择</option>
            <option value="1">现金</option>
            <option value="2">现金劵</option>
            <option value="3">加息券</option>

        </select>
}
else if (acttype == 4)
{
    if (Disp == 0)
    {
            <label for="rewardType">会员类型：</label>
    }
        <select style="height: 24px;line-height:24px" name="usertypes" id="usertypes">
            <option value="0">投资用户</option>
            <option value="1">借款用户</option>
            <option value="2">借款企业</option>
        </select>
}
else if (acttype == 5)
{
    if (Disp == 0)
    {
            <label for="rewardType">会员类型：</label>
    }
        <select style="height: 24px;line-height:24px" name="usertypes" id="usertypes">
            <option value="-1">请选择</option>
            <option value="0">投资用户</option>
            <option value="1">借款用户</option>
            <option value="2">借款企业</option>
        </select>
}


}



