<script>
$(function () {

	/*---新手指引---------------------------*/
	$(".gud_btn li").hover(function(){
		$(this).find(".gud_a02").css('display','block');
	},function(){
		$(this).find(".gud_a02").css('display','none');
	})

	var curr = 0;
	var iNow=0;
	var timer=null;
	$(".gud_cont3 dl dt").each(function (i) {
		$(this).click(function () {
			curr = i;
			$(".gud_tabCont div").eq(i).css('display','block').siblings("div").css('display','none');
			$(this).addClass("gud_tab_hover").siblings().removeClass("gud_tab_hover");

			iNow=i;
			clearInterval(timer);
			timer=setInterval(function(){
				iNow++
				var showimg=$(".gud_tabCont div").eq(i).children('p').eq(0).children('img');
				var showBtn=$(".gud_tabCont div").eq(i).children('p').eq(1).children('span');
				if(iNow>=$(showBtn).length){
					iNow%=$(showBtn).length;
				};
				setTab(showimg,showBtn)
			},2000);
		});
	});

	$(".gud_next").click(function () {
		if (curr == 4) {
			var go = 0;
		} else {
			var go = (curr + 1) % 5;
		}
		$(".gud_cont3 dl dt").eq(go).click();
	});
	$(".gud_prev").click(function () {
		if (curr == 0) {
			var go = 4;
		} else {
			var go = (curr - 1) % 5;
		}
		$(".gud_cont3 dl dt").eq(go).click();
	});

	function setTab(showImg,showSpan){

		$(showImg).eq(iNow).css('display','block').siblings("img").css('display','none');
		$(showSpan).eq(iNow).addClass("gud_hover").siblings().removeClass("gud_hover");
	};

	$('.gud_p_Bot span').each(function(i){
		var _this=$(this);
		$(this).click(function(){

			iNow=$(_this).index();
			var showimg=$(_this).parent('p').prev('p').children('img');
			var showBtn=$(_this).parent('p').children('span');
			setTab(showimg,showBtn);

		})
	});
	$('.gud_tabCont div').hover(function(){
			clearInterval(timer);
		},function(){
			var _this=$(this);
			clearInterval(timer);
			timer=setInterval(function(){
				iNow++;
				var len=$(_this).children('p').eq(1).children('span').length;
				var showimg=$(_this).children('p').eq(0).children('img');
				var showBtn=$(_this).children('p').eq(1).children('span');
				if(iNow>=len){
					iNow%=len;
				}
				setTab(showimg,showBtn)
			},2000)
		});

		clearInterval(timer);
		timer=setInterval(function(){

			var showimg=$(".gud_tabCont div").eq(0).children('p').eq(0).children('img');
			var showBtn=$(".gud_tabCont div").eq(0).children('p').eq(1).children('span');
			iNow++
			if(iNow>=2){
				iNow%=2;
			};
			setTab(showimg,showBtn)
		},2000);

});
</script>