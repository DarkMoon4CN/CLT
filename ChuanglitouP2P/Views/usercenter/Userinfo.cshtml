                }
                else {
                    layer.msg("" + data.info + "", 2, 5);
                }

            }
        });
    }

    function UpdateQQ() {
        var qq = $("#qq").val();
        $.post("/usercenter/UpdateQQ?method=post", { "qq": qq }, function (data) {
            if (data.rs == "y") {
