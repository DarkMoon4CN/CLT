@using ChuanglitouP2P.Common;
@using ChuanglitouP2P.BLL;
@model ChuangLitouP2P.Models.hx_member_table
@{
    ViewBag.Title = "我的账户";
    Layout = "~/Views/Shared/IndexBottom_Layout.cshtml";
    B_usercenter o = new B_usercenter();
}
<!--首页抢现金红包二维码弹窗-->
<style type="text/css">
    .tanchu_hongbao {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 999999;
        display: none;
    }

    .tanchu_hongbao_zhezhao {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: #000;
        opacity: 0.5;
        z-index: 10;
    }

    .tanchu_hongbao_content {
        width: 250px;
        height: 60px;
        position: relative;
        margin: 170px auto;
        text-align: center;
        padding-top: 30px;
        background: #ffffff;
        z-index: 999;
        border: 7px solid #ddd;
    }



    .Close {
        float: right;
        margin-top: -20px;
        width: 35px;
        height: 36px;
    }
</style>
