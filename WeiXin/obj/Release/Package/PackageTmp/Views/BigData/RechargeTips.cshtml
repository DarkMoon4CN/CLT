<script type="text/javascript">
    $(function () {
        var paramVal = getUrlParam("isphone");
        if (paramVal == "true")//是苹果app跳页
        {
            $(".header").hide();
        }
    });

    function getUrlParam(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
        var r = window.location.search.substr(1).match(reg);  //匹配目标参数
        if (r != null) return decodeURI(r[2]); return null; //返回参数值
    }
</script>
@using (Html.BeginForm("RechargeTips", "usercenter", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registerform", @name = "Form1", @id = "Form1" }))
{

<div id="recharge">
    <header class="header">
        <div class="return"><a href="javascript:history.go(-1);"></a></div>
        <h2 class="head_title">银行限额说明</h2>
    </header>
    <table style="" cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>银行名称</th>
                <th>单笔限额</th>
                <th>单卡单日累计限额</th>
            </tr>
        </thead>
        <tbody>
            @if (listBank != null)
            {
                foreach (var item in listBank)
                {
                    <tr>
                        <td><img src="@item.CardImageNew">@item.BankName</td>
                        <td>@(item.SingleTransQuota)元/笔</td>
                        <td>@(item.CardDailyTransQuota)元/日</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

}
