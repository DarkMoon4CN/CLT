                fxtype = 0;
                $('#Isinterest').val(rtype);
                $.post("/Home/investUserActRewType", {"isinterest":rtype,"targetid":@Model.targetid,"Rewardsids":df.val()  }, function (data) {
                    $(".pop_table").html(data);
                });

            }
        }
    }

</script>
