@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Shared/IndexBottom_Layout.cshtml";
}
@section js{
    @Url.File("/js/Validform_v5.3.2.js").ToHtml()
    @Url.File("/js/layer/layer.min.js").ToHtml()
