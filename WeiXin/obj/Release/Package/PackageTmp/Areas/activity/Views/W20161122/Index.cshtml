<script type="text/javascript">
    var userid = 0;
    $(function () {
        userid = $("#userid").val();
    });
    $("#w_xianjin_zhuce").on("click", function () {
        $(".w_xianjin_tan").show();
        if (userid == 0) {
            $(".shade_1").show();
        }
        else {
            $(".shade_2").show();
        }
    });
    $(".shade_1 span").on("click", function () {
        $(".w_xianjin_tan").hide();
        $(".shade_1").hide();
        return false;
    });
    $(".shade_2").on("click", function () {
        $(".w_xianjin_tan").hide();
        $(".shade_1").hide();
    });
    $(".BarCentert").on("click", "a", function () {
        $(".shade").show();
    })
    $(".shade").on("click", function () {
        $(".shade").hide();
    })
    $(".fixed_Bar_Close").on("click", function () {
        $(".fixed_Bar").hide();
    })
</script>
