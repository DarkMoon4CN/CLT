@{
    ViewBag.Title = "一元抢iPhone";

    ViewBag.keywords = "投资返现，创利投";

    ViewBag.desc = "新用户注册一元抢iPhone！";

    Layout = "~/Views/Shared/Activity_Layout.cshtml";
}

